<!DOCTYPE html>
<html>
    <head>
        <link href="<%= url_for("/icon.png") %>" rel="shortcut icon"/>
        <meta charset="utf-8"/>
        <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0" name="viewport"/>
        <link href="<%= url_for("/endgame/css/common.css") %>" rel="stylesheet" type="text/css"/>
        % my @include_csses = @$csses;
        % my $asset_css = app->static->file("/endgame/css/$page_id.css");
        % push @include_csses, "/endgame/css/$page_id.css" if $page_id && $asset_css && $asset_css->is_file;
        % for my $css (@include_csses) {
        %     if ($css =~ m{^(https?://|/)}) {
        <link href="<%= $css %>" rel="stylesheet">
        %     } else {
        <link href="<%= url_for($css) %>" rel="stylesheet">
        %     }
        % }
        <meta content="Launchpad by Anima" name="author">
        </meta>
    </head>
    <body style="margin: 0;
 background: rgba(255, 255, 255, 1.0);">
        <input id="anPageName" name="page" type="hidden" value="<%= $page_id %>"/>
        <div class="<%= $page_id %>">
            <div style="width: 375px; height: 100%; position:relative; margin:auto;">
                %= content
            </div>
        </div>
        <script type="text/javascript" src="<%= url_for("/endgame/js/anima.js") %>"></script>
        % my @include_jses = @$jses;
        % my $asset_js = app->static->file("/endgame/js/$page_id.js");
        % push @include_jses, "/endgame/js/$page_id.js" if $page_id && $asset_js && $asset_js->is_file;
        % for my $js (@include_jses) {
        %     if ( $js =~ m{^(https?://|/)} ) {
        <script type="text/javascript" src="<%= $js %>"></script>
        %     }
        %     else {
        <script type="text/javascript" src="<%= url_for($js) %>"></script>
        %     }
        % }
    </body>
</html>
